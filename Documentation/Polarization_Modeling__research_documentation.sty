\newcommand*{\timediff}[2][1]{
    \ifnum#1=1
        \dot{#2}
    \else
        \ifnum#1=2
            \ddot{#2}
        \else
            \ifnum#1=3
                \dddot{#2}
            \else
                \overset{#1}{\dot{#2}} % Too many dots, just put number of dots.
            \fi
        \fi
    \fi
    }
\newcommand*{\pdiff}[2][\null]{\, \partial^{#1} \mkern-1.1mu #2}


% Modify the vector notation such that, rather than an arrow, a harpoon is used to denote a vector or vector field. Create bold, upright, and hatted unit vector definitions for physics-like vector notation.
\newcommand{\tikzoverset}[2]{%
  \tikz[baseline=(X.base),inner sep=0pt,outer sep=0pt]{%
    \node[inner sep=0pt,outer sep=0pt] (X) {$#2$}; 
    \node[yshift=1pt] at (X.north) {$#1$};
}}
\newcommand{\vect}[1]{\tikzoverset{\rightharpoonup}{#1}}
